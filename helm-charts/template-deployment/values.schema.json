{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["templates"],
  "properties": {
    "templateDefaults": {
      "type": "object",
      "description": "Default configurations for different template types",
      "properties": {
        "web": {
          "type": "object",
          "description": "Default configuration for web applications"
        },
        "database": {
          "type": "object",
          "description": "Default configuration for database applications"
        },
        "utility": {
          "type": "object",
          "description": "Default configuration for utility applications"
        }
      }
    },
    "templates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Template name"
          },
          "type": {
            "type": "string",
            "description": "Template type for inheritance (web, database, utility, etc.)"
          },
          "image": {
            "type": "object",
            "properties": {
              "repository": {
                "type": "string",
                "description": "Image repository"
              },
              "tag": {
                "type": "string",
                "description": "Image tag"
              },
              "pullPolicy": {
                "type": "string",
                "description": "Image pull policy"
              }
            },
            "required": ["repository", "tag"]
          }
        },
        "required": ["name", "image"]
      }
    }
  }
}
