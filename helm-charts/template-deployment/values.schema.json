{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["templates"],
  "properties": {
    "global": {
      "type": "object",
      "description": "Global configuration applied to all templates",
      "properties": {
        "imageRegistry": {
          "type": "string",
          "description": "Global image registry"
        },
        "imagePullSecrets": {
          "type": "array",
          "description": "Global image pull secrets",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the image pull secret"
              }
            }
          }
        },
        "storageClass": {
          "type": "string",
          "description": "Global storage class for PVCs"
        }
      }
    },
    "templateDefaults": {
      "type": "object",
      "description": "Default configurations for different template types",
      "properties": {
        "default": {
          "type": "object",
          "description": "Default configuration applied to all templates regardless of type"
        }
      },
      "additionalProperties": {
        "type": "object",
        "description": "Type-specific default configuration"
      }
    },
    "templates": {
      "type": "array",
      "description": "List of templates to deploy",
      "items": {
        "type": "object",
        "required": ["name", "image"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Template name",
            "minLength": 1
          },
          "namespace": {
            "type": "string",
            "description": "Kubernetes namespace for this template"
          },
          "type": {
            "oneOf": [
              {
                "type": "string",
                "description": "Single template type for inheritance (web, database, utility, etc.)"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Multiple template types for inheritance (ordered by priority, last has highest precedence)"
              }
            ],
            "description": "Template type(s) for inheritance"
          },
          "replicaCount": {
            "type": "integer",
            "description": "Number of replicas",
            "minimum": 0
          },
          "image": {
            "type": "object",
            "required": ["repository", "tag"],
            "properties": {
              "repository": {
                "type": "string",
                "description": "Image repository",
                "minLength": 1
              },
              "tag": {
                "type": "string",
                "description": "Image tag",
                "minLength": 1
              },
              "pullPolicy": {
                "type": "string",
                "description": "Image pull policy",
                "enum": ["Always", "IfNotPresent", "Never"]
              }
            }
          },
          "deployment": {
            "type": "object",
            "description": "Deployment specific configuration",
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "Whether to create a Deployment resource"
              }
            }
          },
          "service": {
            "type": "object",
            "description": "Service specific configuration",
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "Whether to create a Service resource"
              },
              "type": {
                "type": "string",
                "description": "Kubernetes Service type",
                "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"]
              },
              "port": {
                "type": "integer",
                "description": "Service port",
                "minimum": 1,
                "maximum": 65535
              }
            }
          },
          "ingress": {
            "type": "object",
            "description": "Ingress specific configuration",
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "Whether to create an Ingress resource"
              }
            }
          },
          "serviceAccount": {
            "type": "object",
            "description": "ServiceAccount specific configuration",
            "properties": {
              "create": {
                "type": "boolean",
                "description": "Whether to create a ServiceAccount"
              },
              "name": {
                "type": "string",
                "description": "ServiceAccount name"
              }
            }
          },
          "resources": {
            "type": "object",
            "description": "Resource requests and limits",
            "properties": {
              "limits": {
                "type": "object",
                "description": "Resource limits"
              },
              "requests": {
                "type": "object",
                "description": "Resource requests"
              }
            }
          }
        }
      }
    }
  }
}
