{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "description": "Global configuration",
      "properties": {
        "imageRegistry": {"type": "string"},
        "imagePullSecrets": {"type": "array"},
        "timezone": {"type": "string"}
      }
    },
    "jobs": {
      "type": "object",
      "description": "CronJob definitions",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "enabled": {"type": "boolean"},
          "schedule": {
            "type": "string",
            "description": "Cron schedule (e.g., '0 0 * * *')"
          },
          "suspend": {"type": "boolean"},
          "image": {
            "type": "object",
            "properties": {
              "repository": {"type": "string"},
              "tag": {"type": "string"},
              "pullPolicy": {"type": "string"}
            }
          },
          "command": {"type": "array"},
          "args": {"type": "array"},
          "testDeployment": {
            "type": "object",
            "properties": {
              "enabled": {"type": "boolean"},
              "command": {"type": "array"}
            }
          },
          "configMap": {
            "type": "object",
            "properties": {
              "create": {"type": "boolean"},
              "data": {"type": "object"}
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}